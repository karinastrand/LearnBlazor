
@page "/learnBlazor/ParentComponent"

<h3>Parent Component</h3>

<CascadingValue Value="@MessageForGrandChild" Name="Message">
    <CascadingValue Value="@LuckyNumber" Name="LuckyNumber">
        <CascadingValue Value="@IntLuckyNumber">
        <_ChildComponent OnButtonClick="ShowMessage" 
            Title="This title is passed as a parameter from Parent Component">
            <ChildSomeContent> Text passed inside childcomponent from Parent Component!!</ChildSomeContent>
            <ChildContent>
                <p>Some text inside the child content form parent content</p>
                <br/>
                <p class="text-primary">Some other text</p>
            </ChildContent>
        </_ChildComponent>
    </CascadingValue>
    </CascadingValue>
</CascadingValue>
<p>@messageText</p>




@code {
    private string MessageForGrandChild = "This message is passed from Parent Component to Grand Child";
    private string LuckyNumber = "7";
    private int IntLuckyNumber = 12;
    public string messageText = "";
    private void ShowMessage()
    {
        messageText = "Button inside child component was clicked";
    }
}
